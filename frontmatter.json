{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "artwork",
      "pageBundle": false,
      "clearEmpty": true,
      "previewPath": "/artworks",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "year",
          "type": "number"
        },
        {
          "name": "tags",
          "type": "tags"
        },
        {
          "name": "isDraft",
          "type": "boolean",
          "default": true
        },
        {
          "name": "medium",
          "type": "list"
        },
        {
          "name": "featured",
          "type": "fields",
          "title": "Featured",
          "fields": [
            { "title": "Image", "name": "image", "type": "image" },
            { "title": "Alt", "name": "alt", "type": "string" }
          ]
        },
        {
          "name": "gallery",
          "type": "image",
          "multiple": true,
          "title": "Gallery"
        }
      ]
    }
  ],
  "frontMatter.data.files": [
    {
      "title": "Settings",
      "id": "settings",
      "file": "[[workspace]]/src/content/settings/default.yml",
      "fileType": "yaml",
      "singleEntry": true,
      "schema": {
        "title": "Settings",
        "type": "object",
        "properties": {
          "sitename": {
            "type": "string",
            "title": "Site title"
          }
        }
      }
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "artwork",
      "path": "[[workspace]]/src/content/artwork"
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.git.enabled": true,
  "frontMatter.framework.startCommand": "yarn dev"
}
