{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "artwork",
      "pageBundle": false,
      "clearEmpty": true,
      "previewPath": "/artworks",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "year",
          "type": "number",
          "required": true,
          "numberOptions": {
            "min": 1950,
            "max": 2200
          }
        },
        {
          "name": "tags",
          "type": "tags"
        },
        {
          "name": "isDraft",
          "type": "boolean",
          "default": true
        },
        {
          "name": "medium",
          "type": "list"
        },
        {
          "name": "featured",
          "type": "fields",
          "title": "Featured",
          "fields": [
            {
              "title": "Image",
              "name": "image",
              "type": "image"
            },
            {
              "title": "Alt",
              "name": "alt",
              "type": "string"
            }
          ]
        },
        {
          "name": "gallery",
          "type": "image",
          "multiple": true,
          "title": "Gallery"
        }
      ]
    },
    {
      "name": "setting",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "sitename",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true
        },
        {
          "name": "logo",
          "type": "string",
          "single": true
        },
        {
          "name": "socials",
          "type": "fields",
          "fields": [
            {
              "name": "twitter",
              "type": "string",
              "single": true
            },
            {
              "name": "instagram",
              "type": "string",
              "single": true
            },
            {
              "name": "facebook",
              "type": "string",
              "single": true
            },
            {
              "name": "linkedin",
              "type": "string",
              "single": true
            }
          ]
        },
        {
          "name": "contact",
          "type": "fields",
          "fields": [
            {
              "name": "email",
              "type": "string",
              "single": true
            }
          ],
          "required": true
        }
      ]
    },
    {
      "name": "page",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "snippet",
          "type": "string",
          "single": true
        },
        {
          "name": "tags",
          "type": "tags"
        },
        {
          "name": "featured",
          "type": "fields",
          "fields": [
            {
              "name": "image",
              "type": "image",
              "required": true,
              "isPreviewImage": true
            },
            {
              "name": "alt",
              "type": "string",
              "single": true
            }
          ]
        },
        {
          "name": "isDraft",
          "type": "boolean",
          "default": true
        },
        {
          "name": "template",
          "type": "choice",
          "choices": [
            "default",
            "none"
          ],
          "default": "default"
        },
        {
          "name": "type",
          "type": "choice",
          "choices": [
            "default"
          ],
          "default": "default"
        }
      ]
    },
    {
      "name": "menu",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": []
    }
  ],
  "frontMatter.data.files": [
    {
      "title": "Settings",
      "id": "settings",
      "file": "[[workspace]]/src/data/settings/default.yml",
      "fileType": "yaml",
      "singleEntry": true,
      "schema": {
        "title": "Settings",
        "type": "object",
        "properties": {
          "sitename": {
            "type": "string",
            "title": "Site title"
          }
        }
      }
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "artwork",
      "path": "[[workspace]]/src/data/artworks"
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.git.enabled": true,
  "frontMatter.framework.startCommand": "yarn dev"
}